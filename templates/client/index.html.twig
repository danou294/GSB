{% extends 'base.html.twig' %}

{% block title %}Individus{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Types d'individus</h1>
        <div class="tableau">
            <div class="row">
                <a href="{{ path('ajout_client') }}">
                    <button type="submit" name="button" value="insert" class="btn-ajouter">Ajouter</button>
                </a>
                <a href="{{ path('ajout_client') }}">
                    <button type="submit" name="button" value="insert" class="btn-modifier">Modifier</button>
                </a>

            </div>
            <div>
                <ul class="liste-individus">
                    {% for TypeIndividu in controller_name %}
                        <li class="row individus">

                            <span>{{ TypeIndividu.tinLibelle }}</span>

                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
